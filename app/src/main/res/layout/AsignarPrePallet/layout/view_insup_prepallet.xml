<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_weight="50"
                android:orientation="vertical">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabAtras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/fab_margin"
                    android:clickable="true"
                    app:backgroundTint="#43A047"
                    app:elevation="2dp"
                    android:src="@drawable/backicon" />

            </LinearLayout>

            <!--<LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_weight="33">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="@dimen/fab_margin"
                    app:backgroundTint="#43A047"
                    android:src="@drawable/home48" />

            </LinearLayout>-->

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="50"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/btnSendGP"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="@dimen/fab_margin"
                    android:src="@drawable/send_to_gp" />

                <TextView
                    android:id="@+id/lblSendGPP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Enviar a GP"
                    android:textStyle="bold" />

                <!--android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabSendGP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:clickable="true"
                    android:layout_margin="@dimen/fab_margin"
                    app:backgroundTint="#43A047"
                    app:elevation="2dp"
                    android:src="@drawable/send_to_gp" /-->

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <!-- Header aligned to top -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="left" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#2978B5"
                    android:textSize="30dp"
                    android:text="Pre-Pallet"  />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/lblTituloInvoicePP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:text="Invoice"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblInvoicePP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        android:text="INVOICE"  />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/btnPrintPallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:src="@drawable/iprint" />

                        <TextView
                            android:id="@+id/lblPrintPallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:visibility="visible"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Imprimir" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnConfigScan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:src="@drawable/config_scan" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:visibility="visible"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Scan Mode" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="#f4d101"/>


        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/header"
        android:gravity="top" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <include layout="@layout/viewprepalletlist"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="#f4d101"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar datos"
                    android:layout_weight="0.1"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_press_green"
                    android:id="@+id/btnSaveCajas"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/titleBoxesList"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Lista de cajas"
                        android:textColor="#2978B5"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:layout_weight="0.2"/>

                    <LinearLayout
                        android:id="@+id/btnScanCase"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0.8">


                        <ImageView
                            android:layout_height="50dp"
                            android:layout_width="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/qr_scan_icon"
                            android:id="@+id/imageView4" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Scan Caja"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="#000"/>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Lista de Folios"
                        android:textColor="#2978B5"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_margin="5dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="100"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="50">

                    <!--LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/titleBoxesList"
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Lista de cajas"
                            android:textColor="#2978B5"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_margin="5dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guardar datos"
                            android:layout_weight="0.1"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:background="@drawable/btn_press_green"
                            android:id="@+id/btnSaveCajas"
                            />

                    </LinearLayout-->


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8">

                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/et_Cases"
                                android:hint="Case" />

                        </android.support.design.widget.TextInputLayout>



                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GO"
                            android:layout_weight="0.2"
                            android:id="@+id/btnGo" />
                    </LinearLayout>

                    <ListView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/casesList"
                        android:clickable="true"
                        android:layout_margin="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="fill_parent"
                    android:background="#f4d101"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="50">

                    <!--LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Lista de Folios"
                            android:textColor="#2978B5"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_margin="5dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="60dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Asignar Folios"
                            android:layout_weight="0.1"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:background="@drawable/btn_press_green"
                            android:id="@+id/btnSaveFolios" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="40dp"
                        android:layout_width="match_parent"
                        android:weightSum="100"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtFolio"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:layout_weight="50"
                            android:text="** Manten presionado cada folio para cambiar la configuraciÃ³n del codigo de caja o eliminar el folio"
                            android:textStyle="bold"
                            android:textColor="@color/red"
                            android:textSize="15dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="5dp"
                        android:background="#f4d101"/-->

                    <ListView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/foliosList"
                        android:clickable="true"
                        android:layout_margin="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
